@model ModelEF.Model.Product
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    <i class="fa fa-save"></i>&nbsp;Chi tiết sản phẩm
}
<div class="card">
    @using (Html.BeginForm("Detail", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()        
        <div class="card-block typography">           
                <div class="col-lg-12 form-group">
                    <div class="col-md-6">
                        @Html.ActionLink("Quay lại", "Index", "Product", new { @class = "btn btn-primary" })
                    </div>
                </div>                
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label col-md-2" })                       
                        @Html.DisplayFor(model => model.ID, new { @class = "form-control" })                                            
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ID_Category, "ID_Category", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DisplayFor(model => model.ID_Category, new { @class = "form-control" })                      
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DisplayFor(model => model.Name, new { @class = "form-control", @placeholder = "" })                       
                    </div>               
                    <div class="form-group">
                        @Html.LabelFor(model => model.UnitCost, htmlAttributes: new { @class = "control-label col-md-2" })                        
                        @Html.DisplayFor(model => model.UnitCost, new { @class = "form-control", @placeholder = "" })           
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })                      
                        @Html.DisplayFor(model => model.Quantity, new { @class = "form-control", @placeholder = "" })
                        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })                
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })                       
                        @Html.DisplayFor(model => model.Description, new { @class = "form-control", @placeholder = "" })                     
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })                   
                        @Html.DisplayFor(model => model.Status, new { @class = "form-control", @placeholder = "" })          
                    </div>
                </div>       
    }
</div>